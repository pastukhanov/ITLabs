<Window x:Class="Task2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Airplane and Helicopter App" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                <TextBlock Text="Длина взлеточной полосы для самолета: " VerticalAlignment="Center"/>
                <TextBox Width="100" Margin="5 0" Text="{Binding RunwayLengthInput, Mode=TwoWay}"/>
            </StackPanel>
            <Button Content="Взлет самолета" Command="{Binding TakeOffAirplaneCommand}" Margin="0 0 10 0"/>
            <Button Content="Посадка самолета" Command="{Binding LandAirplaneCommand}" Margin="0 0 10 0"/>
            <Button Content="Взлет вертолета" Command="{Binding TakeOffHelicopterCommand}" Margin="0 0 10 0"/>
            <Button Content="посадка вертолета" Command="{Binding LandHelicopterCommand}" Margin="0 0 10 0"/>
            <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
